    <!-- 是否为Xposed模块 -->
    <meta-data
        android:name="xposedmodule"
        android:value="true"/>
    <!-- 模块的简介（在框架中显示） -->
    <meta-data
        android:name="xposeddescription"
        android:value="我是Xposed模块简介" />
    <!-- 模块最低支持的Api版本 一般填82即可 -->
    <meta-data
        android:name="xposedminversion"
        android:value="82"/>
    <!-- 模块作用域 -->
    <meta-data
        android:name="xposedscope"
        android:resource="@array/xposedscope"/>
</application>